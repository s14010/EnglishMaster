<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/difficulty"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s14010.englishmaster.SubActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小学1~3年"
        android:id="@+id/button02_id"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小学4~6年"
        android:id="@+id/button03_id"
        android:textSize="40dp"
        android:layout_below="@+id/button02_id"
        android:layout_alignStart="@+id/button02_id"
        android:layout_marginTop="95dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中学1,2年"
        android:id="@+id/button04_id"
        android:textSize="40dp"
        android:layout_above="@+id/button05_id"
        android:layout_alignStart="@+id/button03_id"
        android:layout_marginBottom="83dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中学3年"
        android:id="@+id/button05_id"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button04_id" />
</RelativeLayout>
